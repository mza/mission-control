<%= render :partial => 'shared/header', :locals => { :title => "Start new mission", :subtitle => "Hinxton, we have no problem" } %>
<%= render :partial => 'shared/flashes' %>
<% form_for(:mission, @mission, :url => { :action => :create }, :method => :post) do |f| %>
	<div class='item'>
		<div class='item_title'>
			Mission details
		</div>
		<div class='item_content'>
			Name:<br /> <%= f.text_field :name %>
		</div>	
		<br clear='all' />
	</div>

	<%= render :partial => "shared/specifications" %>
	
	<div class='item'>
		<div class='item_title'>
			Dataset
		</div>
		<div class='item_content'>
			<%= select :mission, :dataset, @buckets.map {|b| b.name } %>
		</div>	
		<br clear='all' />	
	</div>
	
	<div class='item'>
		<div class='item_title'>
			Metric
		</div>
		<div class='item_content'>
			The base unit of work for this mission:<br /> <%= f.text_field :metric %>
		</div>	
		<br clear='all' />
	</div>
	

	<div class='item'>
		<div class='item_title'>
			&nbsp;
		</div>
		<div class='item_content'>
			<%= submit_tag 'Start mission', :confirm => "You're about to start a new mission.\n\nYou will be charged for the use of this service. Are you sure you want to continue?" %> or <%= link_to "cancel", houston_path %>
		</div>	
		<br clear='all' />	
	</div>

	
<% end %>
<%= render :partial => 'shared/footer' %>
